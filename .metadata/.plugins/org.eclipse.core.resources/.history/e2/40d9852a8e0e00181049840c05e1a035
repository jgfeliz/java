package graficos;

import javax.swing.*;//importo paquete javax.swing

public class miMarco extends JFrame{ //creo una clase publica llamada miMarco la cual hereda la clase JFrame
	
	public miMarco(){//metodo constructor
		//los constructores le dan estado inicial a los objetos		
		setSize(500,300);//en esta propiedad le establesco un tamano de 500x300 pixeles
		String tituloMarco=JOptionPane.showInputDialog("ingresa el titulo que quieres que tenga el marco de la ventana");
		setTitle(tituloMarco); //con esta propiedad se le asigna un titulo al marco
	}
	
}